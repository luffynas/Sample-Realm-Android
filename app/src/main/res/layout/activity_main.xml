<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luffycode.samplerealm.MainActivity">

    <Button
        android:id="@+id/btnSaveUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan User" />
    <Button
        android:id="@+id/btnShowUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan User" />

    <Button
        android:id="@+id/btnSaveCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan Category" />
    <Button
        android:id="@+id/btnShowCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan Category" />

    <Button
        android:id="@+id/btnSaveMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan Meal" />
    <Button
        android:id="@+id/btnShowMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan Meal" />

    <Button
        android:id="@+id/btnSaveCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan Cart" />
    <Button
        android:id="@+id/btnShowCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan Cart" />
</LinearLayout>
